{
  "name": "mailmind-backend",
  "version": "0.1.0",
  "description": "MailMind backend API server",
  "main": "dist/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "summarize": "tsx src/scripts/daily-summarize.ts"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@langchain/core": "^0.3.26",
    "@langchain/langgraph": "^0.2.19",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-validator": "^7.0.1",
    "googleapis": "^131.0.0",
    "groq-sdk": "^0.3.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.3.8",
    "mongoose": "^8.19.2",
    "morgan": "^1.10.1",
    "openai": "^4.24.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.24",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^1.1.0"
  }
}
